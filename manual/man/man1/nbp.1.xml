<refentry id="nbp1">
  <refmeta>
    <refentrytitle>nbp</refentrytitle>

    <manvolnum>1</manvolnum>

    <refmiscinfo class="date">17 Dec 1991</refmiscinfo>

    <refmiscinfo class="source">:NETATALK_VERSION:</refmiscinfo>
